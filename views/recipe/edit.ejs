<h1> Edit Recipe </h1>

<form method="POST" action="/recipe/update?_method=PUT">
    <div class="form-group">
        <label>name</label>
        <input type="text" name="name" value="<%= recipe.name %>"  class="form-control">
    </div>

    <div class="form-group">
        <label>step</label>
        <input type="text" name="step" value="<%= recipe.step %>"  class="form-control">
    </div>

   
    <div class="form-group">
        <label>ingredient</label>
        <input type="text" name="ingredient" value="<%= recipe.ingredient %>"  class="form-control">
    </div>

    

    <input type="hidden" name="id" value="<%= recipe._id %>"  class="form-control">
    <br>
    <button type="submit" class="btn btn-primary">Update recipe</button>

</form>